<!DOCTYPE html>
<html lang="en">
<head>
    <title>Teacher</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="css/header.css">
    <link rel="stylesheet" type="text/css" href="css/logout.css">
</head>
<body>

    <%- include("common/header"); %>

    <div class="container d-flex justify-content-between mt-3 mb-2">
        <div><h5>Total <%= result.length %> students</h5></div>
        <div></div>
        <div><a href="http://localhost:4200/addStudent"><button class="btn btn-primary">Add Student</button></a></div>
    </div>

    <div class="container">
        <Table class="table table-bordered table-striped shadow rounded">
            <thead>
            <tr>
                <th>Roll No.</th>
                <th>Name</th>
                <th>Date of Birth</th>
                <th>Score</th>
                <th>Action</th>
            </tr>
           </thead>
           <tbody>
                
                <% result.forEach((row)=>{ %>
                    <tr>
                        <td><%= row.rollNo %></td>
                        <td><%= row.studentName %></td>
                        <td><%= row.birth %></td>
                        <td><%= row.score %></td>
                        <td>
                            <div class="d-flex">
                            <a href="http://localhost:4200/updateStudent/<%= row.rollNo %>"><img src="https://w7.pngwing.com/pngs/238/286/png-transparent-computer-icons-pen-paper-pen-pencil-text-logo-thumbnail.png"  height="30px" width="30px"></a>
                            <form action="/teacher/deleteRecord/<%= row.rollNo %>" method="post">
                              <button  style="border: 0px;" class="mx-2" type="submit"><img src="https://freesvg.org/img/milker_X_icon.png" height="30px" width="30px"></button>
                            </form>
                            </div>
                        </td>
                    </tr>
                <% }) %>
    
           </tbody>
        </Table>
        </div>
</body>
</html>